<div>
    <h2>検索システム</h2>
    <%= search_form_for @q, url: url do |f| %>
        <div class="item_name">
            <h3><%= f.label :name, '作品名',  class: "block text-grey-500 text-sm font-bold mb-2" %></h3>
            <%= f.search_field :name_or_description_cont, placeholder: '作品名', class: "block text-grey-500 text-sm font-bold mb-2" %>
        </div>
        <div class="item_price">
            <h3><%= f.label :price, '販売価格', class: "block text-grey-500 text-sm font-bold mb-2" %></h3>
            <%= f.search_field :price_gteq, placeholder: '¥1,000', class: "text-grey-200 text-sm font-bold mb-2" %>〜
            <%= f.search_field :price_lteq, placeholder: '¥3,000', class: "text-grey-200 text-sm font-bold mb-2" %>
        </div>
        <div class="item_category">
            <h3><%= f.label :item_category_id, 'カテゴリー' %></h3>
       		<%= f.collection_select :item_category_id_eq, ItemCategory.all, :id, :name, { prompt: true} , class: "block text-grey-500 text-sm font-bold mb-2" %>
        </div>
        <div class="item_shipping_day">
            <h3><%= f.label :shipping_day_type, '発送までの日数', class: "block text-grey-500 text-sm font-bold mb-2" %></h3>
            <%= f.collection_select :shipping_day_type_id_eq, ShippingDayType.all, :id, :name, {prompt: true}, class:"block text-grey-500 text-sm font-bold mb-2" %>
        </div>
        <%= f.submit "検索" %>
    <% end %>
</div>