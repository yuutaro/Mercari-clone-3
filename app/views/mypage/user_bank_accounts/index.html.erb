<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 md:px-8 xl:px-0" id="contents">
    <div class="text-center w-full px-4 bg-white md:w-2/3 lg:w-1/2 mx-auto" id="input">
        <h1 class="font-black mb-8 text-2xl">振込銀行口座一覧</h1>
        <%= form_with url: mypage_current_user_bank_account_path, method: :patch do |f| %>
        <div class="text-left">
            <% @user_bank_accounts.each do |user_bank_account| %>
                <div class="border border-gray-200 mb-4 flex space-x-4 p-4 rounded-sm cursor-pointer hover:bg-gray-100 duration-200 trantision">
                    <div class="flex-grow">
                        <div class="flex items-center">
                            <%= f.radio_button :user_bank_account_id, user_bank_account.id, checked: current_user.current_user_bank_account&.user_bank_account_id == user_bank_account.id %>
                            <p><%= user_bank_account.name %><br /><%= user_bank_account.kind_i18n %> <%= user_bank_account.account_number %><br /><%= user_bank_account.account_name %></p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <%= link_to "編集", edit_mypage_user_bank_account_path(user_bank_account), class: "bg-white border-2 border-red-500 font-bold text-red-500 px-4 py-1 rounded text-base mr-2" %>
                        <%= link_to "削除", mypage_user_bank_account_path(user_bank_account), data: { confirm: "本当に削除しますか？ " }, method: :delete, class: "bg-white border-2 border-red-500 font-bold text-red-500 px-4 py-1 rounded text-base" %>
                    </div>
                </div>
            <% end %>
            <%= link_to new_mypage_user_bank_account_path, class: "flex items-center text-sm text-blue-500 hover:opacity-80" do %>
                <div class="rounded-full w-4 h-4 border border-blue-500 flex items-center justify-center mr-1">＋</div><span>新しい口座を登録する</span>
            <% end %>
        </div>
        <div class="text-left mt-6">
            <div class="text-center mb-2 flex flex-col space-y-4">
            <button class="text-base font-bold bg-red-500 text-white p-2 w-full block py-4 rounded-sm" value="">更新する</button>
            </div>
        </div>
        <% end %>
    </div>
</main>