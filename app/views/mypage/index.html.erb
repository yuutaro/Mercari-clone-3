<div class="w-full md:w-9/12 hidden md:block " id="profile">
  <div class="flex flex-col justify-center space-x-4 items-start mb-12 md:items-center">
    <%= image_tag "profile.png", class: "mb-4 rounded-full w-16 h-16 md:w-24 md:h-24" %>
    <div class="text-center">
      <%= link_to user_path(current_user), class: "font-bold text-2xl flex items-center justify-center mb-4" do %>
      <span><%= current_user.nickname %></span>
        <svg class="w-7 text-gray-800" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8.46967 4.21967C8.17678 4.51256 8.17678 4.98744 8.46967 5.28033L15.1893 12L8.46967 18.7197C8.17678 19.0126 8.17678 19.4874 8.46967 19.7803C8.76256 20.0732 9.23744 20.0732 9.53033 19.7803L16.7803 12.5303C17.0732 12.2374 17.0732 11.7626 16.7803 11.4697L9.53033 4.21967C9.23744 3.92678 8.76256 3.92678 8.46967 4.21967Z" fill="currentColor"></path>
        </svg>
      <% end %>
      <%= render partial: "shared/evaluation", locals: { user: current_user } %>
    </div>
  </div>
  <div class="mb-4 py-6 border-t border-b border-gray-300 mt-12 md:items-center">
    <div class="border-l-4 border-red-500 py-0 px-4 font-bold">
      <p>売上金</p>
      <p>¥1,200</p>
    </div>
  </div>
</div>