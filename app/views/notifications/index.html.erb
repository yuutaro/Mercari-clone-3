<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 px-2 md:px-8 xl:px-0" id="contents">
  <div class="w-full md:w-1/2 mx-auto" id="reviews">
    <h2 class="text-2xl font-black mb-6 text-center">お知らせ</h2>
    <ul class="flex border-b border-gray-200 w-full md:w-auto">
      <li class="px-4 py-4 border-b-4 border-red-500 text-red-500 font-black text-sm w-1/2 text-center md:text-left md:w-auto">
        <%= link_to "お知らせ", notifications_path, class: "block" %>
      </li>
      <li class="px-4 py-4 text-gray-500 font-normal text-sm w-1/2 text-center md:text-left md:w-auto">
        <%= link_to "ニュース", news_index_path, class: "block" %>
      </li>
    </ul>
    <ul class="w-full">
      <% @notifications.each do |notification| %>
        <li class="border-b border-gray-300 w-full flex group hover:bg-gray-100 duration-200 trantision">
          <%= link_to notification, class: "flex-grow px-4 py-4 block w-full" do %>
            <p class="mb-1"><%= notification.title %></p>
            <p class="text-xs text-gray-400" id="date"><%= l notification.created_at, format: :long %></p>
          <% end %>
          <div class="flex items-center pr-2">
            <svg class="w-5 text-gray-500" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8.46967 4.21967C8.17678 4.51256 8.17678 4.98744 8.46967 5.28033L15.1893 12L8.46967 18.7197C8.17678 19.0126 8.17678 19.4874 8.46967 19.7803C8.76256 20.0732 9.23744 20.0732 9.53033 19.7803L16.7803 12.5303C17.0732 12.2374 17.0732 11.7626 16.7803 11.4697L9.53033 4.21967C9.23744 3.92678 8.76256 3.92678 8.46967 4.21967Z" fill="currentColor"></path>
            </svg>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</main>