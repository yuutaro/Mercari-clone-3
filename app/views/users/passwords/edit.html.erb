<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 md:min-h-[calc(100vh-24rem)] md:px-8 xl:px-0" id="contents">
  <div class="text-center w-full px-4 bg-white md:w-2/3 lg:w-1/2 mx-auto" id="input">
    <h1 class="font-black mb-8 text-2xl">パスワード再設定</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <%= render "shared/error_messages", resource: resource %>
      <div class="text-left">
        <div class="mb-8">
          <%= f.label :password, "New password",class: "block text-grey-500 text-sm font-bold mb-2" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "appearance-none border border-gray-300 rounded py-2 px-3 text-grey-darker w-full" %>
          <% if @minimum_password_length %>
            <em>パスワードは<%= @minimum_password_length %>文字以上で入力してください</em><br />
          <% end %>
        </div>
        <div class="mb-8">
          <%= f.label :password_confirmation, "Confirm new password",class: "block text-grey-500 text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none border border-gray-300 rounded py-2 px-3 text-grey-darker w-full" %>
        </div>
      </div>
      <div class="mb-8 mt-12">
        <div class="text-center mb-2 flex flex-col space-y-4">
          <%= f.submit "パスワードを再設定する", class: "text-base font-bold bg-red-500 text-white p-2 w-full block py-4 rounded-sm" %>
        </div>
      </div>
      <div class="text-right">
        <%= render "users/shared/links" %>
      </div>
    <% end %>
  </div>
</main>